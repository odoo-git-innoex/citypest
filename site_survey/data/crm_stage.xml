<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="custom_stage_site_survey" model="crm.stage">
            <field name="name">Site Survey</field>
            <field name="is_site_survey">True</field>
        </record>

        <record id="custom_stage_survey_submit" model="crm.stage">
            <field name="name">Survey Submit</field>
            <field name="is_survey_submit">True</field>
        </record>

        <record id="crm_stage_inherit_site_survey" model="ir.ui.view">
            <field name="name">crm.stage.site.survey</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='is_won']" position="after">
                    <field name="is_new"/>
                    <field name="is_site_survey"/>
                    <field name="is_survey_submit"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>