<odoo>
    <record id="view_fsm_order_form_products_tab" model="ir.ui.view">
        <field name="name">fsm.order.form.products.tab</field>
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
        <field name="arch" type="xml">

            <!-- Only Products tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Additional Services">
                    <field name="product_line_ids" context="{'default_order_id': active_id}">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>

