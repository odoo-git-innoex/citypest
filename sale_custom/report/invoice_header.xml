<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="tax_invoice_header">
            <div class="header" style="width: 100%;font-family: Tahoma, Verdana, Segoe, sans-serif;">

                <table style="width:100%; border-collapse: collapse; border:hidden;">
                    <tr>

                        <!-- Logo -->
                        <td style="width:50%; border:hidden; vertical-align:top;">
                            <div style="margin-top:-8px"><img t-att-src="'data:image/png;base64,%s' % (o.company_id.logo and o.company_id.logo.decode('utf-8') or '')"
                                 style="max-height:500px; max-width:500px;"/></div>
                        </td>

                        <!-- Company Details -->
                        <td style="width:50%; border:hidden; text-align:right; vertical-align:top;">
                            <p style="margin:0; font-size:14px;">
                                Mob. No: <t t-esc="o.company_id.mobile"/>
                            </p>

                            <p style="margin:0; font-size:14px;">
                                P.O.Box:  
                                <t t-if="o.company_id.street">
                                    <t t-esc="o.company_id.street"/>,
                                </t>
                                <t t-if="o.company_id.street2">
                                    <t t-esc="o.company_id.street2"/>,
                                </t>
                                <t t-if="o.company_id.zip">
                                    <t t-esc="o.company_id.zip"/>,
                                </t>
                                <t t-if="o.company_id.state_id">
                                    <t t-esc="o.company_id.state_id.name"/>,
                                </t>
                                <t t-if="o.company_id.country_id">
                                    <t t-esc="o.company_id.country_id.name"/>
                                </t>
                            </p>

                            <p style="margin:0; font-size:14px;">
                                Tel: <t t-esc="o.company_id.phone"/>
                            </p>

                            <p style="margin:0; font-size:14px;">
                                E-mail: <t t-esc="o.company_id.email"/>
                            </p>

                            <p style="margin:0; font-size:14px; font-weight:bold;">
                                TRN No: <t t-esc="o.company_id.vat"/>
                            </p><br/>
                        </td>

                    </tr>
                </table>
            </div>

            <div class="footer" style="font-family: Tahoma, Verdana, Segoe, sans-serif;">
                <div class="invoice-footer" style="margin-top:30px;">
                    <table style="width:100%;" class="table table-borderless">
                        <tr>
                            <td style="width:65%;border-right:1px solid black; vertical-align:top;">
                                <div style="border-bottom: 1px solid black; width: fit-content; margin-bottom: 5px;">
                                    <span style="font-weight:bold;">Payment Info:</span>
                                </div>
                                <table style="width:100%; border:hidden; font-size:14px;">
                                    <tr>
                                        <td style="width:20%; border:hidden;">Account Name</td>
                                        <td style="width:3%; border:hidden;">:</td>
                                        <td style="border:hidden;">CITY PEST CONTROL AND BUILDING CLEANING SERVICES L.L.C</td>
                                    </tr>
                                    <tr>
                                        <td style="border:hidden;">Bank Name</td>
                                        <td style="border:hidden;">:</td>
                                        <td style="border:hidden;">Abu Dhabi Commercial Bank</td>
                                    </tr>
                                    <tr>
                                        <td style="border:hidden;">Account No.</td>
                                        <td style="border:hidden;">:</td>
                                        <td style="border:hidden;">177906020001</td>
                                    </tr>
                                    <tr>
                                        <td style="border:hidden;">Iban No.</td>
                                        <td style="border:hidden;">:</td>
                                        <td style="border:hidden;">AE450030000177906020001</td>
                                    </tr>
                                    <tr>
                                        <td style="border:hidden;">Swift Code</td>
                                        <td style="border:hidden;">:</td>
                                        <td style="border:hidden;">ADCBAEAA</td>
                                    </tr>
                                </table>
                            </td>
                            <td style="width:35%; border-left:1px solid black; vertical-align:bottom; text-align:left;font-size:13px;">
                                <div>
                                    <span style="font-weight:bold;">Prepared by :</span>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <span style="text-align:right; margin-left:5px;">_________________________________</span>
                                    <span style="margin-left:5px;">:إعداد</span>
                                </div>
                                <br/>
                                <br/>
                                <br/>
                                <div>
                                    <span style="font-weight:bold;">Received by :</span>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <span style="text-align:right; margin-left:4px;">_________________________________</span>
                                    <span style="margin-left:3px;">:المستلم</span>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <hr style="border-top: 2px solid #000; margin: 10px 0;"/>
                <div style="text-align:center;">
                    <t t-esc="o.company_id.website"/>
                </div>
                <div style="text-align:right; font-size:15px;">
                    Page <span class="page"/> of <span class="topage"/>
                </div>
            </div>
        </template>
    </data>
</odoo>
