<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fsm_order_form_inherit_sale_custom" model="ir.ui.view">
        <field name="name">fsm.order.form.inherit.sale.custom</field>
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="sale_order_id" readonly="context.get('default_sale_order_id')"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Sale Product Lines">
                    <field name="sale_line_ids">
                        <tree editable="bottom" create="0" delete="0" edit="0">
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
